{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Nova Itera Asset Schema",
  "type": "object",
  "properties": {
    "rank": { "type": "integer" },
    "asset_name": { "type": "string" },
    "type": { "type": "string" },
    "high_value_rationale": { "type": "string" },
    "target_venue": { "type": "string" },
    "timestamp": { "type": "string", "format": "date-time" },
    "status": { "type": "string", "enum": ["Active", "Published", "Archived"] }
  },
  "required": ["rank", "asset_name", "type", "timestamp"]
}
